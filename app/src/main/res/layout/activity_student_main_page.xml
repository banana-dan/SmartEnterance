<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentMainPage">


    <include layout="@layout/student_activity_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/simple_padding">

        <LinearLayout
            android:layout_width="@dimen/qr_code_image_size"
            android:layout_height="@dimen/qr_code_image_size"
            android:background="@drawable/rounded_button_20"
            android:elevation="5dp"
            android:gravity="center"

            android:orientation="vertical"
            android:translationZ="5dp">

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/frame" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/simple_margin"
            android:gravity="center"
            android:text="Код Имя Фамилия"
            android:textColor="@color/simple_text_color"
            android:textSize="18pt" />

        <Button
            android:id="@+id/activity_student_button_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/simple_margin"
            android:background="@drawable/rounded_button_1000"
            android:text="Нужен другой код?"
            android:textColor="@color/colorBackground"
            android:textSize="10pt" />

    </LinearLayout>

</LinearLayout>