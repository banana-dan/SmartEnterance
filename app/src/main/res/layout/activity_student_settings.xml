<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentSettingsActivity">

    <include layout="@layout/standart_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <Button
                android:id="@+id/settings_delete_user_mode_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/rounded_button_7_dark"
                android:text="delete?"
                android:textColor="@color/colorBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Вы не ученик?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/simple_text_size" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>